<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="149dp"
        android:layout_height="52dp"
        android:text="Insertar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.406" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="142dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:text="Actualizar"
        app:layout_constraintEnd_toEndOf="@+id/btnInsertar"
        app:layout_constraintStart_toStartOf="@+id/btnInsertar"
        app:layout_constraintTop_toBottomOf="@+id/btnInsertar" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="Borrar"
        app:layout_constraintEnd_toEndOf="@+id/btnActualizar"
        app:layout_constraintStart_toStartOf="@+id/btnActualizar"
        app:layout_constraintTop_toBottomOf="@+id/btnActualizar" />
</androidx.constraintlayout.widget.ConstraintLayout>